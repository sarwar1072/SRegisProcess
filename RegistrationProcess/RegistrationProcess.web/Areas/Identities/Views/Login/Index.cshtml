@model LoginModel


<script src="https://kit.fontawesome.com/64d58efce2.js"
        crossorigin="anonymous"></script>
<div class="row row d-flex justify-content-center">
    <div class="  col-md-4 card-body border border-success rounded shadow p-3">
        <section>

            <form asp-controller="Login" asp-action="Index" method="post">
                <h4 class="text-center text-secondary">Log In</h4>
                <hr /> <br />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <i class="fas fa-user"></i>
                    <label for="UserName"> User Name</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <i class="fas fa-lock"></i>
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="text-center btn btn-success col-md-3">Log in</button>
                </div>

            </form>
        </section>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
